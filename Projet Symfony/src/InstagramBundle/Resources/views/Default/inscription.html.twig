{% extends "InstagramBundle:Default:layout.html.twig" %}

{% block body %}
	<div class="col-md-6 col-md-offset-3 canvas well">
		{{ form_start(form, {"attr": {"class": "form-horizontal"}}) }}
			<fieldset>
				<!-- Form Name -->
				<div class="form-group">
					<legend>Rejoignez Instagram aujourd'hui</legend>
				</div>

				<!-- Username input-->
				<div class="form-group">
					<div class="col-md-12">
						{{ form_errors(form.username) }}
						{{ form_widget(form.username, {"attr": {"class": "form-control input-md", "placeholder": "Username"}}) }}
					</div>
				</div>

				<!-- Email input-->
				<div class="form-group">
					<div class="col-md-12">
						{{ form_errors(form.email) }}
						{{ form_widget(form.email, {"attr": {"class": "form-control input-md", "placeholder": "Email"}}) }}
					</div>
				</div>

				<!-- Password input-->
				<div class="form-group">
					<div class="col-md-12">
						{{ form_widget(form.password, {"attr": {"class": "form-control input-md", "placeholder": "Mot de passe"}}) }}
					</div>
				</div>

				<!-- Button -->
				<div class="form-group">
					<div class="col-md-12">
						{{ form_widget(form.inscription, {"attr": {"class": "btn btn-primary btn-block"}, "label": "S'inscrire"}) }}
					</div>
				</div>
			</fieldset>
		{{ form_end(form) }}
		<a href="{{ path('login') }}">Vous avez déjà un compte ? Se connecter</a>
	</div>
{% endblock %}